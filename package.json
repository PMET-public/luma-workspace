{
    "author": "Carlos A. Cabrera @fnhipster",
    "private": true,
    "version": "1.0.0-beta.1",
    "repository": "https://github.com/PMET-public/luma-workspace.git",
    "bugs": "https://github.com/PMET-public/luma-workspace/issues",
    "workspaces": [
        "./luma-ui",
        "./luma-pwa"
    ],
    "scripts": {
        "reinstall": "rm -rf node_modules yarn.lock luma-pwa/node_modules luma-pwa/yarn.lock luma-ui/node_modules luma-ui/yarn.lock && yarn",
        "build": "yarn build:luma-pwa",
        "build:luma-pwa": "yarn workspace luma-pwa build",
        "start": "yarn workspace luma-pwa start",
        "dev": "concurrently -n luma-ui,luma-pwa -c red,yellow 'yarn dev:luma-ui' 'yarn dev:luma-pwa'",
        "dev:luma-ui": "yarn workspace @pmet-public/luma-ui dev",
        "dev:luma-pwa": "yarn workspace luma-pwa dev"
    },
    "devDependencies": {
        "concurrently": "^5.0.0",
        "react": "16.13.1",
        "react-dom": "16.13.1"
    }
}