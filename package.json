{
    "author": "Carlos A. Cabrera @fnhipster",
    "private": true,
    "version": "1.0.0-beta.1",
    "repository": "https://github.com/PMET-public/luma-workspace.git",
    "bugs": "https://github.com/PMET-public/luma-workspace/issues",
    "workspaces": [
        "./ui",
        "./pwa"
    ],
    "scripts": {
        "cleanup": "rm -rf node_modules yarn.lock pwa/.next pwa/node_modules pwa/yarn.lock ui/node_modules ui/yarn.lock && yarn && echo \"ðŸ§¼ So fresh and so clean clean (clean)\"",
        "build": "yarn build:pwa",
        "build:pwa": "yarn workspace pwa build",
        "start": "yarn workspace pwa start",
        "dev": "concurrently -n ui,pwa -c red,yellow 'yarn dev:ui' 'yarn dev:pwa'",
        "dev:ui": "yarn workspace @pmet-public/ui dev",
        "dev:pwa": "yarn workspace pwa dev"
    },
    "devDependencies": {
        "concurrently": "^5.0.0"
    }
}